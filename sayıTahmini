# python ile sayı tahmini oyunu 

from random import randint

rand=randint(1,101)
sayac=0
while True:
    sayac+=1
    sayi=int(input("1 ile 100 arasında bir sayı tuttum. hadi tahmin et!(0 tusu cıkıs için)"))
    if(sayi==0):
        print( "cıkıs yaptınız. ")
        break
    elif sayi<rand:
        print("daha yüksek bir sayı söyle")
        continue
    elif sayi>rand:
        print("daha düşük bir sayı söyle")
        continue
    else:
        print("tuttugum sayi: ",rand)
        print("girilen tahmin sayısı: ",sayac)




